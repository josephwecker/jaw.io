- wrap_layout :layout do
  %header.article
    %a.jaw{:href=>'/'}
      %img{:src=>'/img/jaw.svg'}
    %h1= current_page.data.title
    %h2= current_page.data.subtitle || ''
    - if current_page.data.draft
      %h1.draft Draft
  -#hd &nbsp;
  %article
    %header.inner
      %h1.title-again= current_page.data.title
      %h2.title-again= current_page.data.subtitle
    #info
      %p= current_page.data.author || 'Joseph A Wecker'
      %time= current_page.date.strftime('%e %b %Y')
      -#%p= current_page.data.tags
    =yield
